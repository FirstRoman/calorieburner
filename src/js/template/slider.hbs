{{#each arrayVideos}}

  <div class="aaa">
   <section class="slider-text-pos">
    <h2 class="slider-text__title">{{name}}</h2>
    <ul class="slider-text__list">
      <li class="slider-text__item">
        <span class="slider-text__item-description">
          <svg class="slider-text__item-icon">
            <use href="./../src/img/icons/sprite.svg#icon-baseline-timer-24px"></use>
          </svg>
          Длительность:{{duration}}</span
        ><span class="slider-text__item-about"></span>
      </li>
      <li class="slider-text__item">
        <span class="slider-text__item-description">
          <svg class="slider-text__item-icon">
            <use
              href="./../src/img/icons/sprite.svg#icon-baseline-star_border-24px"
            ></use>
          </svg>
          Сложность:{{level}}</span
        ><span class="slider-text__item-about"></span>
      </li>
      <li class="slider-text__item">
        <span class="slider-text__item-description">
          <svg class="slider-text__item-icon">
            <use
              href="./../src/img/icons/sprite.svg#icon-baseline-whatshot-24px"
            ></use>
          </svg>
          Сжигает:{{colories}}</span
        ><span class="slider-text__item-about"></span>
      </li>
      <li class="slider-text__item">
        <span class="slider-text__item-description">
          <svg class="slider-text__item-icon">
            <use
              href="./../src/img/icons/sprite.svg#icon-baseline-fitness_center-24px"
            ></use>
          </svg>

          Инвентарь:{{inv}}</span
        ><span class="slider-text__item-about"></span>
      </li>
    </ul></section>
 
<a class='slider-link' href="{{src}}" target="iframe_a"><img src="{{img}}"></a>
</div>
{{/each}}